<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alaskalinuxuser.justchess.IntroActivity"
    tools:showIn="@layout/activity_intro">

    <ImageView
        android:id="@+id/playSingleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="playSingle"
        android:text="Single Player"
        android:layout_margin="30dp"
        android:background="@drawable/wp"/>

    <ImageView
        android:id="@+id/playDoubleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="playDouble"
        android:text="Two Player"
        android:layout_margin="30dp"
        android:background="@drawable/knpwn"/>

</LinearLayout>
