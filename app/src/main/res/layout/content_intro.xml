<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alaskalinuxuser.justchess.IntroActivity"
    tools:showIn="@layout/activity_intro">

    <ImageView
        android:id="@+id/playSingleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="playSingle"
        android:text="Single Player"
        android:layout_margin="30dp"
        android:background="@drawable/wp"/>

    <ImageView
        android:id="@+id/playDoubleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:background="@drawable/knpwn"
        android:onClick="playDouble"
        android:text="Two Player" />

    <Spinner
        android:id="@+id/chooseGameMode"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/gameModeDescription"
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/previewGameMode"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="previewGameMode"
        android:text="Preview" />


</LinearLayout>
